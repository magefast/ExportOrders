<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="sales" >
            <resource>Dragonfly_ExportOrders::management</resource>
            <group id="dragonfly_export_orders" translate="label" type="text" sortOrder="10" showInDefault="1">
                <label>Magento ExportOrders to 1C Settings</label>
                <field id="export_dir" translate="label comment" type="text" sortOrder="1" showInDefault="1">
                    <label>Export directory</label>
                    <validate>required-entry</validate>
                    <comment>Full path</comment>
                </field>
            </group>
        </section>
    </system>
</config>
